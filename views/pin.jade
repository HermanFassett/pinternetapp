extends layout

block content
  .page-header
    h3 Create Pin

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='title') Title
      .col-sm-8
        input.form-control(type='text', name='title', id='title', autofocus=true, autocomplete='off')
    .form-group
      label(class='col-sm-2 control-label', for='url') Image URL
      .col-sm-8
        input.form-control(type='text', name='url', id='url')
    .form-group
      label(class='col-sm-2 control-label') Preview
      .col-sm-8
        .grid-item
          img(id='img-preview', src='http://dummyimage.com/800x600&text=Pinternet', class='grid-img')
          h3
            a(href='#', target='_blank' id='title-preview')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-success(type='submit')
          i.fa.fa-pinterest-p
          |  Pin
